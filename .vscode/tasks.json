{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "npm",
      "script": "watch",
      "problemMatcher": "$tsc-watch",
      "isBackground": true,
      "presentation": {
        "reveal": "never"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      }
    },
    {
      "type": "shell",
      "command": "node_modules/.bin/ts-node",
      "args": [
        "test/suite/commands.utils.ts",
        "show-selection-boundaries",
        "${file}",
      ],
      "label": "show selection boundaries",
      "group": "test",
      "problemMatcher": [],
    },
    {
      "type": "shell",
      "command": "node_modules/.bin/ts-node",
      "args": [
        "test/suite/commands.utils.ts",
        "hide-selection-boundaries",
        "${file}",
      ],
      "label": "hide selection boundaries",
      "group": "test",
      "problemMatcher": [],
    },
    {
      "type": "shell",
      "command": "node_modules/.bin/ts-node",
      "args": [
        "test/suite/commands.utils.ts",
        "add-selection",
        "${file}",
        "${lineNumber}",
        "${selectedText}",
      ],
      "label": "add selection",
      "group": "test",
      "problemMatcher": [],
    },
  ]
}
